@page "/add"
@rendermode InteractiveServer

<PageTitle>Add Note</PageTitle>

<div class="col-md-8 col-lg-6">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Add a New Note</h5>
        </div>
        <div class="card-body">
            <form @onsubmit="HandleSubmit">
                <div class="mb-3">
                    <label for="noteTitle" class="form-label">Title</label>
                    <input type="text" class="form-control" id="noteTitle" @bind="noteTitle"
                        placeholder="Enter note title" required />
                </div>
                <div class="mb-3">
                    <label for="noteContent" class="form-label">Content</label>
                    <textarea class="form-control" id="noteContent" @bind="noteContent" placeholder="Enter note content"
                        rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Note</button>
            </form>
        </div>
    </div>
</div>
