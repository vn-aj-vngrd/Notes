@page "/note/{id:int}"
@rendermode InteractiveServer

<PageTitle>Note</PageTitle>

@if (_note == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container">

    <div class="card">
        <div class="card-header">
            <h5 class="card-title">@_note.Title</h5>
        </div>
        <div class="card-body">
            <p class="card-text">@_note.Content</p>
            <div class="d-flex justify-content-between">
                <a class="btn btn-warning" href="/note/edit/@_note.Id">Edit</a>
                <button class="btn btn-danger" @onclick="HandleDeleteNote">Delete</button>
            </div>
        </div>
    </div>

</div>

}